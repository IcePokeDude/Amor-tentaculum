      <AbilityDef>
        <defName>ParaBarbs</defName>
        <label>venom barbs</label>
        <description>Launches several venom laced barbs at the enemy that may cause paralyisis.</description>
        <iconPath>UI/Abilities/PiercingSpine</iconPath>
        <cooldownTicksRange>600</cooldownTicksRange>
        <displayOrder>200</displayOrder>
        <aiCanUse>true</aiCanUse>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <range>15</range>
            <warmupTime>0.5</warmupTime>
            <soundCast>PiercingSpine_Launch</soundCast>
        </verbProperties>
        <comps>
            <li Class="EBSGFramework.CompProperties_AbilityLaunchProjectileBurst">
                <projectileDef>Barbs</projectileDef>
                <burstCount>5</burstCount>
            </li>
            <li Class="EBSGFramework.CompProperties_AbilityGiveMultipleHediffs">
                <hediffsToGive>
                    <li>
                        <hediffDef>Paralyticvenom</hediffDef>
                        <replaceExisting>false</replaceExisting>
                        <severity>1</severity>
                    </li>
            </hediffsToGive>
            </li>
        </comps>
    </AbilityDef>

