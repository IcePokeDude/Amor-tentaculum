  	<HediffDef>
    <defName>Paralyticvenom</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>paralytic venom</label>
    <labelNoun>venom</labelNoun>
    <description>Something has injected this pawn with paralytic venom, they will soon be unable to move.</description>
    <defaultLabelColor>(1,1,1)</defaultLabelColor>
    <minSeverity>0</minSeverity>
    <initialSeverity>1</initialSeverity>
    <maxSeverity>1</maxSeverity>
    <stages>
                <li>
        <minSeverity>0.1</minSeverity>
        <label>nearly gone</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.9</setMax>
          </li>
        </capMods>
          </li>
                      <li>
        <minSeverity>0.4</minSeverity>
        <label>fading</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.7</setMax>
          </li>
        </capMods>
          </li>
        <li>
        <minSeverity>0.75</minSeverity>
        <label>paralyzed</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    <li>
        <minSeverity>0.8</minSeverity>
        <label>taking effect</label>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.85</setMax>
          </li>
        </capMods>
      </li>
    <li>
        <minSeverity>1</minSeverity>
        <label>injected</label>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
        <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-5</severityPerDay>
      </li>
    </comps>
  </HediffDef>

