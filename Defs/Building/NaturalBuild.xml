      <li>ATStrut</li>
    </researchPrerequisites>
  </ThingDef>

  <ThingDef ParentName="DoorBase">
    <defName>sphincterdoor</defName>
    <label>sphincterdoor</label>
    <description>Divides rooms. Organic tentacle sphincter allows people to move through the door without slowing down.</description>
    <statBases>
      <WorkToBuild>1100</WorkToBuild>
    </statBases>
    <graphicData>
      <texPath>Things/Buildings/Sphincter/DoorTS</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Buildings/Sphincter/DoorTSUI</uiIconPath>
    <costList>
      <Hresin>40</Hresin>
      <SmallTEggFert>1</SmallTEggFert>
    </costList>
    <costStuffCount>25</costStuffCount>
    <comps>
      <li Class="CompProperties_Styleable" />
    </comps>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>Autodoors</li>
      <li>ATStrut</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>

    <TerrainDef ParentName="FloorBase">
    <defName>TentFloor</defName>
    <label>Tentacle floor</label>
    <description>A warm, wriggling floor. Enhances cleanliness as the tentacles eat dust and bactiria. Might suck your toes.</description>
    <texturePath>Things/Buildings/Floor/TentFloor</texturePath>
    <edgeType>Hard</edgeType>
    <renderPrecedence>240</renderPrecedence>
    <pathCost>0.98</pathCost>
    <statBases>
      <Beauty>1</Beauty>
      <Cleanliness>0.2</Cleanliness>
      <WorkToBuild>400</WorkToBuild>
      <FilthMultiplier>0.05</FilthMultiplier>
    </statBases>
    <costList>
      <softresin>5</softresin>
    </costList>
        <researchPrerequisites>
      <li>ATStrut</li>
    </researchPrerequisites>
  </TerrainDef>

</Defs>